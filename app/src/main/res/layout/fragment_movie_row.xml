<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/movie_data_row_background"
                                             android:padding="@dimen/default_padding">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/movieId"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="@string/app_name"
              android:textSize="@dimen/default_text"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/movieTitle"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/movieTitle"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="@string/app_name"
              android:textSize="@dimen/default_text"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/movieId"
              android:layout_marginTop="@dimen/BU3"/>
</android.support.constraint.ConstraintLayout>